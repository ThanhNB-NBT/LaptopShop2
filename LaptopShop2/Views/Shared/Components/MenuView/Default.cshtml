@model IEnumerable<TbMenu>

@foreach (var menu in Model.Where(m => m.MenuLevel == 1).OrderBy(n => n.MenuOrder))
{
    var mId = menu.MenuId;
    var sMenu = Model.Where(p => p.ParentId == mId).OrderBy(p => p.MenuOrder).ToList();
    if (sMenu.Count == 0)
    {
        <li>
            <a href="/@menu.ControllerName" class="active">@menu.MenuName</a>
        </li>
    }
    else
    {
        <li>
            <a href="/@menu.ControllerName" class="active">@menu.MenuName</a>
                <ul class="header__menu__dropdown">
                    @foreach (var smn in sMenu)
                    {
                        <li><a href="">@smn.MenuName</a></li>
                    }
                </ul>
        </li>
    }
}