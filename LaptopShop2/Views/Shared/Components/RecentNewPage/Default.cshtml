@using LaptopShop2.Functions;
@model IEnumerable<LaptopShop2.Models.TbNews>


<div class="blog__sidebar__item">
    <h4>Tin tức mới</h4>
    <div class="blog__sidebar__recent">
        @foreach (var rn in Model)
        {
            string url = Function.TitleSlugGeneration("News", rn.Title, rn.NewId);
            <a href="/@url" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                    <img style="width: 70px; height: 70px;object-fit:cover;" src="@rn.Image" alt="@rn.Title">
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h5>@rn.Title</h5>
                    <span>@rn.CreatedDate</span>
                </div>
            </a>
        }
    </div>
</div>
