@model LaptopShop2.Models.TbCustomer

@{
    ViewData["Title"] = "Thông tin cá nhân";
}
<section class="breadcrumb-section set-bg" data-setbg="/assets/img/backiee.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thông tin cá nhân</h2>
                    <div class="breadcrumb__option">
                        <a href="~/Home">Trang chủ</a>
                        <span>Thông tin cá nhân</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container-fluid">
    <div class="container mt-5">
        <h2>Thông tin cá nhân</h2>
        <form asp-action="UpdateProfile" asp-controller="Customer" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label class="fw-semibold" for="fullName">Họ tên:</label>
                        <input type="text" class="form-control" id="fullName" name="FullName" value="@Model.FullName">
                    </div>
                    <div class="form-group mb-3">
                        <label class="fw-semibold" for="address">Địa chỉ:</label>
                        <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
                    </div>
                    <div class="form-group mb-3">
                        <label class="fw-semibold" for="phone">Số điện thoại:</label>
                        <input type="text" class="form-control" id="phone" name="Phone" value="@Model.Phone">
                    </div>
                    <div class="form-group mb-3">
                        <label class="fw-semibold" for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email">
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</div>



