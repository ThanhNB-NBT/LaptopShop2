@using LaptopShop2.Models
@model TbNews
@using LaptopShop2.Functions;

@{
    ViewData["Title"] = Model.Title.ToString();
    string url = Function.TitleSlugGeneration("News", Model.Title, Model.NewId);
}

<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="/assets/img/backiee.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>@Model.Title</h2>
                    <ul>
                        <li>@Model.CreatedBy</li>
                        <li>@Model.CreatedDate</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form role="search" method="get" action="@Url.Action("Index", "News")">
                            <input name="searchString" type="text" value="@ViewBag.Keyword" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Danh mục</h4>
                        <ul>
                            @foreach (var category in ViewBag.CategoryNews)
                            {
                                <li>
                                    <a href="@Url.Action("Index", new { categoryId = category.CategoryNew.CategoryNewId})">
                                        @category.CategoryNew.Name <span>(@category.NewsCount)</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    @await Component.InvokeAsync("RecentNewPage")

                    <div class="blog__sidebar__item">
                        <h4>Tag</h4>
                        <div class="blog__sidebar__item__tags">
                            @foreach (var tag in ViewBag.Tags)
                            {
                                <a href="@Url.Action("Index", new {tag = tag})">@tag</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <b style="box-sizing: inherit; border: 0px; vertical-align: baseline; background: 0px 0px;font-size: 28px; ">@Model.Description</b>
                    @Html.Raw(Model.Detail)
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Tác giả: </span>@Model.CreatedBy</li>
                                    <li><span>Danh mục: </span>@Model.CategoryNew.Name</li>
                                    <li><span>Tags: </span> @Model.Tags</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Tin tức bạn có thể thích</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("RecentNew")
        </div>
    </div>
</section>
<!-- Related Blog Section End -->

