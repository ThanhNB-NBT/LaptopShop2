@using LaptopShop2.Models;
@model List<TbProduct>

@foreach (var products in ViewBag.spBanChay)
{
    <div class="col-lg-3 col-md-4 col-sm-6 featured__item filter-@products.CategoryProductId">
        <div class="featured__item__pic set-bg" data-setbg="@products.Image">
            <ul class="featured__item__pic__hover">
                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                <li><a class="add-to-cart" data-product-id="@products.ProductId"><i class="fa fa-shopping-cart"></i></a></li>
            </ul>
        </div>
        <div class="featured__item__text">
            <h6><a href="#">@products.ProductName</a></h6>
            @if (products.Discount > 0)
            {
                <del><span style="color: red; font-size: 16px;">@String.Format("{0:N0}", products.Price) đồng</span></del>
                <div class="discount-price-home">
                    <span class="discounted-price-home">@String.Format("{0:N0}", products.DiscountedPrice) đồng</span>
                </div>
            }
            else
            {
                <span style="font-size: 16px;">@String.Format("{0:N0}", products.Price) đồng</span>
            }
        </div>
    </div>
}