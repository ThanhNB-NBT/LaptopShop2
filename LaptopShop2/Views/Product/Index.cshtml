@model IPagedList<LaptopShop2.Models.TbProduct>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using LaptopShop2.Functions;
@using LaptopShop2.ViewModels;


@{
    ViewData["Title"] = "Cửa hàng";
    int productCount = Model.Count(p => p.IsActive);
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/assets/img/backiee.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Organi Shop</h2>
                    <div class="breadcrumb__option">
                        <a href="~/Home">Trang chủ</a>
                        <span>Cửa hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Thương hiệu</h4>
                        <ul>
                            @foreach(var br in ViewBag.Brand)
                            {
                                <li><a href="@Url.Action("ProductBrands", "Search", new { brandId = br.BrandId })">@br.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="sidebar__item">
                        <h4>Price</h4>
                        <div class="price-range-wrap">
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                 data-min="10" data-max="540">
                                <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            </div>
                            <div class="range-slider">
                                <div class="price-input">
                                    <input type="text" id="minamount">
                                    <input type="text" id="maxamount">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thêm các tùy chọn lọc vào phần sidebar -->
                    <div class="sidebar__item">
                        <h4>Màu sắc</h4>
                        <ul>
                            @foreach (var color in ViewBag.FilterOptions.Colors)
                            {
                                <li>
                                    <label>
                                        <input type="radio" name="colorFilter" value="@color" @(color == ViewBag.SelectedColor ? "checked" : "")>
                                        @color
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="sidebar__item">
                        <h4>Thương hiệu CPU</h4>
                        <ul>
                            @foreach (var cpuCompany in ViewBag.FilterOptions.CpuCompanies)
                            {
                                <li>
                                    <label>
                                        <input type="radio" name="cpuCompanyFilter" value="@cpuCompany" @(cpuCompany == ViewBag.SelectedCpuCompany ? "checked" : "")>
                                        @cpuCompany
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="sidebar__item">
                        <h4>RAM</h4>
                        <ul>
                            @foreach (var ramSize in ViewBag.FilterOptions.RamSize)
                            {
                                <li>
                                    <label>
                                        <input type="radio" name="ramSizeFilter" value="@ramSize" @(ramSize == ViewBag.SelectedRamSize ? "checked" : "")>
                                        @ramSize
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="sidebar__item">
                        <h4>Màn hình</h4>
                        <ul>
                            @foreach (var screenSize in ViewBag.FilterOptions.ScreenSizes)
                            {
                                <li>
                                    <label>
                                        <input type="radio" name="screenSizeFilter" value="@screenSize" @(screenSize == ViewBag.SelectedScreenSize ? "checked" : "")>
                                        @screenSize
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="sidebar__item">
                        <h4>Ổ cứng</h4>
                        <ul>
                            @foreach (var driveMemory in ViewBag.FilterOptions.DriveMemory)
                            {
                                <li>
                                    <label>
                                        <input type="radio" name="driveMemoryFilter" value="@driveMemory" @(driveMemory == ViewBag.SelectedDriveMemory ? "checked" : "")>
                                        @driveMemory
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="sidebar__item">
                        <div class="latest-product__text">
                            <h4>Latest Products</h4>
                            <div class="latest-product__slider owl-carousel">
                               @await Component.InvokeAsync("LastestProduct")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="product__discount">
                    <div class="section-title product__discount__title">
                        <h2>Khuyến mãi tốt</h2>
                    </div>
                    <div class="row">
                        <div class="product__discount__slider owl-carousel">
                            @foreach(var pro in Model)
                            {
                            string url = Function.TitleSlugGeneration("Product", pro.ProductName, pro.ProductId);
                            <div class="col-lg-4">
                                <div class="product__discount__item">
                                    <div class="product__discount__item__pic set-bg"
                                         data-setbg="@pro.Image">
                                            <div class="product__discount__percent">@String.Format("{0:P0}", pro.Discount)</div>
                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a class="add-to-cart" data-product-id="@pro.ProductId"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__discount__item__text">
                                        <span>@pro.CategoryProduct.Name</span>
                                        <h5><a href="/@url">@pro.ProductName</a></h5>
                                            <div class="product__item__price">@Function.FormatCurrency(pro.DiscountedPrice)
                                                <span style="color:red;" >@Function.FormatCurrency(pro.Price)</span>
                                            </div>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Danh mục</span>
                                <select id="categorySelect">
                                    <option value="0">Tất cả</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryProductId">@category.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@productCount</span> Sản phẩm</h6>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="product_item" class="row">
                    @Html.Partial("ProductListPartial", Model)
                </div>
                <div class="product__pagination">
                    @Html.CustomPagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->
<input type="hidden" id="productListUrl" value="@Url.Action("Index", "Product")" />
@section Scripts{
    <script src="/assets/js/product-ajax.js"></script>
    <script>
        $(document).ready(function () {
            $('#categorySelect').change(function () {
                var categoryId = $(this).val();
                $.ajax({
                    url: '/Product/Index',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (result) {
                        $('#product_item').html(result);
                    }
                });
            });
        });
    </script>
    <script>
        function applySetBg() {
            $('.set-bg').each(function () {
                var bg = $(this).data('setbg');
                $(this).css('background-image', 'url(' + bg + ')');
            });
        }

        $(document).ready(function () {
            applySetBg();  // Gọi hàm applySetBg khi trang được tải xong
        });
    </script>
}