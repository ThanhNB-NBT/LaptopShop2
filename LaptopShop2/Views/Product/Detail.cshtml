                string urlRP = Function.TitleSlugGeneration("Product", rp.ProductName, rp.ProductId);
                <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg" data-setbg="@rp.Image">
