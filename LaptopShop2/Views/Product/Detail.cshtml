                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a data-product-id="@rp.ProductId"><i class="fa fa-shopping-cart add-to-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="/@urlRP">@rp.ProductName</a></h6>
                            @if (rp.Discount > 0)
                            {
                                <del><span style="color: red; font-size: 16px;">@String.Format("{0:N0}", rp.Price) đồng</span></del>
                                <div class="discount-price-home">
                                    <span class="discounted-price-home">@String.Format("{0:N0}", rp.DiscountedPrice) đồng</span>
                                </div>
                            }
                            else
                            {
                                <span style="font-size: 16px;">@String.Format("{0:N0}", rp.Price) đồng</span>
                            }
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>
