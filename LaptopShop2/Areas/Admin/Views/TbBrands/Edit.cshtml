@model LaptopShop2.Models.TbBrand

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Chỉnh sửa thương hiệu: @Model.Name</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="BrandId" />
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="control-label form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Banner" class="control-label form-label form-label form-label">Banner</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-success m-1 form-label" onclick="openDialog()">Chọn hình ảnh</button>
                                    </div>
                                    <!-- /btn-group -->
                                    <input type="text" class="form-control " id="file_input" asp-for="Banner" aria-describedby="button-addon2">
                                </div>
                                <span asp-validation-for="Banner" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Description" class="control-label form-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var summerNote = new LaptopShop2.Areas.Admin.Models.SummerNote("");
}
<partial name="_SummerNote" model="summerNote" />

