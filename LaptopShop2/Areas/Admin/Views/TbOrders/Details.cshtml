@model LaptopShop2.Models.TbOrder
@using LaptopShop2.Functions;

@{
    ViewData["Title"] = "Chi tiết";
}

<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">Đơn hàng của @Model.CustomerName</h5>
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Mã đơn hàng:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.Code)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Người nhận:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.CustomerName)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Điện thoại:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.Phone)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Địa chỉ:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.Address)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Lời nhắn:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.Message)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Thời gian mua:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Người đặt:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @Html.DisplayFor(model => model.Customer.CustomerId)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Trạng thái đơn hàng:
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                <form asp-action="UpdateOrderStatus" method="post" id="orderStatusForm-@Model.OrderId">
                                    <input type="hidden" name="orderId" value="@Model.OrderId" />
                                    <select asp-for="@Model.OrderStatusId" asp-items="ViewBag.OrderStatuses" name="orderStatusId" class="form-control order-status-select">
                                        <option value="">-- Chọn trạng thái --</option>
                                    </select>
                                </form>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>

                <!-- Bảng hiển thị sản phẩm -->
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="fw-semibold mb-3">Danh sách sản phẩm</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th class="fw-semibold text-center align-middle">Hình ảnh</th>
                                        <th class="fw-semibold text-center align-middle">Tên sản phẩm</th>
                                        <th class="fw-semibold text-center align-middle">Giá</th>
                                        <th class="fw-semibold text-center align-middle">Số lượng</th>
                                        <th class="fw-semibold text-center align-middle">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var orderDetail in Model.TbOrderDetails)
                                    {
                                        <tr>
                                            <td style="text-center align-middle">@(i++)</td>
                                            <td class="text-center align-middle">
                                                <img src="@orderDetail.Product.Image" alt="@orderDetail.Product.ProductName" class="img-fluid" style="max-width: 125px; max-height: 50px;" />
                                            </td>
                                            <td>@orderDetail.Product.ProductName</td>
                                            <td>@Function.FormatCurrency(orderDetail.Product.DiscountedPrice)</td>
                                            <td>@orderDetail.Quantity</td>
                                            <td class="text-right">@Function.FormatCurrency((decimal)(orderDetail.Product.DiscountedPrice * orderDetail.Quantity))</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="5" class="text-right fw-bold">Tổng cộng:</td>
                                        <td class="text-right fw-bold">@Function.FormatCurrency((decimal)Model.TotalAmount)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".order-status-select").change(function () {
                var formId = $(this).closest("form").attr("id");
                $("#" + formId).submit();
            });
        });
    </script>
}
