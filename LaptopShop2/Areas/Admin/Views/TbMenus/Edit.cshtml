@model LaptopShop2.Models.TbMenu

@{
    ViewData["Title"] = "Chỉnh sửa Menu";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Chỉnh sửa MenuItem: @Model.MenuName</h5>
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MenuId" />
                            <div class="form-group mb-3">
                                <label asp-for="MenuName" class="control-label form-label"></label>
                                <input asp-for="MenuName" class="form-control" />
                                <span asp-validation-for="MenuName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ControllerName" class="control-label"></label>
                                <input asp-for="ControllerName" class="form-control" />
                                <span asp-validation-for="ControllerName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ActionName" class="control-label form-label"></label>
                                <input asp-for="ActionName" class="form-control" />
                                <span asp-validation-for="ActionName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="MenuLevel" class="control-label form-label"></label>
                                <input asp-for="MenuLevel" class="form-control" />
                                <span asp-validation-for="MenuLevel" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ParentId" class="control-label form-label">Cấp trên</label>
                                <select asp-for="ParentId" asp-items="@(ViewBag.ParentMenus)" class="form-control">
                                    <option value="">-- Chọn cấp trên --</option>
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="MenuOrder" class="control-label form-label"></label>
                                <input asp-for="MenuOrder" class="form-control" />
                                <span asp-validation-for="MenuOrder" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Position" class="control-label form-label"></label>
                                <input asp-for="Position" class="form-control" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 form-check form-switch bottom-0">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" />Hiển thị
                                <label class="form-check-label"></label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a asp-action="Index" type="button" class="btn btn-outline-primary m-1">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
