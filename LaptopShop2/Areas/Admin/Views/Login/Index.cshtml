@model LaptopShop2.Models.TbAccount
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập | Đăng ký</title>
    <link rel="stylesheet" type="text/css" href="/lib/StyleLogin.css" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="Login" asp-controller="Login" method="post" class="sign-in-form">
                    @Html.AntiForgeryToken()
                    <h2 class="title">Đăng nhập</h2>

                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["LoginError"]
                        </div>
                    }
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Username" name="username" type="text" placeholder="Tên tài khoản..." />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" name="password" type="password" placeholder="Mật khẩu..." />
                    </div>
                    <input type="submit" value="Đăng nhập" class="btn solid" />

                    <p class="social-text">Đăng nhập với các nền tảng</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>


                <form asp-action="Register" asp-controller="Login" method="post" class="sign-up-form">
                    @Html.AntiForgeryToken()
                    <h2 class="title">Đăng ký</h2>

                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["LoginError"]
                        </div>
                    }
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Username" name="username" type="text" placeholder="Tên tài khoản..." />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" name="password" type="password" placeholder="Mật khẩu..." />
                    </div>
                    <input type="submit" value="Đăng ký" class="btn solid" />

                    <p class="social-text">Đăng ký với các nền tảng</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="panels-container">

            <div class="panel left-panel">
                <div class="content">
                    <h3>Chào mừng</h3>
                    <p>Bạn đến với website quản trị của Ogani Shop</p>
                    <button class="btn transparent" id="sign-up-btn">Đăng ký</button>
                </div>
                <img src="/files/log.svg" class="image" alt="">
            </div>

            <div class="panel right-panel">
                <div class="content">
                    <h3>Chào mừng</h3>
                    <p>Bạn đến với website quản trị của Ogani Shop</p>
                    <button class="btn transparent" id="sign-in-btn">Đăng nhập</button>
                </div>
                <img src="/files/register.svg" class="image" alt="">
            </div>
        </div>
    </div>

    <script src="/lib/app.js"></script>
</body>
</html>
