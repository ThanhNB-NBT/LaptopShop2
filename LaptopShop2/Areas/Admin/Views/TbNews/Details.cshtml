@model LaptopShop2.Models.TbNews

@{
    ViewData["Title"] = "Chi tiết";
}


<div class="container-fluid">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-5 fw-semibold">Tin tức: @Model.Title</h5>
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Tiêu đề
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Title)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Mô tả
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Nội dung
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Detail)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Ngày tạo
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Người tạo
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CreatedBy)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                @Html.DisplayNameFor(model => model.Tags)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Tags)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Đường dẫn hình ảnh:
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Image)
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Hiển thị
                            </dt>
                            <dd class="col-sm-10 fw-semibold border-bottom-0">
                                @if (Model.IsActive)
                                {
                                    <span class="text-success">Có</span>
                                }
                                else
                                {
                                    <span class="text-danger">Không</span>
                                }
                            </dd>
                            <dt class="col-sm-2 fw-semibold border-bottom-0">
                                Danh mục:
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CategoryNew.Name)
                            </dd>
                        </dl>
                        <div>
                            <a class="btn btn-danger m-1" asp-action="Edit" asp-route-id="@Model?.NewId">Edit</a> |
                            <a class="btn btn-outline-primary m-1" asp-action="Index">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

